<% if params[:file] %>
<%= stylesheet_link_tag "coderay" %>
<h1>File: <b><%= @current_path %></b></h1></p>
<%= @rendered_text.html_safe %>
<% else %>
<%
num_dirs = @directory_list.length > 0 ? @directory_list.length : "none."
num_files = @files_list.length > 0 ? @files_list.length : "none."
%>

<!-- <h1>Repository Name: <%= @repo.name %></h1>
<p>Current Path: <b><%= @current_path %></b></p> -->

<p>
<h3>Directories: <%= num_dirs %></h3>
<ul id="dirs">
<% @directory_list.each do |dir| %>	
<li><a href="<%= repository_path(@repo,:path=>@current_path+'/'+dir)  %>"><%= dir %></a></li>
<% end %>
</ul>
</p>

<p>
<h3>Files: <%= num_files %></h3>
<ul id="files">
<%
@files_list.each do |file|
%>	
<li><a href="<%= repository_path(@repo,:path=>@current_path+'/'+file, :file => true) %>"><%= file %></a></li>
<% end %>
</ul>
</p>

<p><h3 id="test">Debug</h3><%= @data.inspect %></p>

<% end %>