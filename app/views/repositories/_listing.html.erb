<% if repositories.empty? %>
	<h3>You don't have any repositories yet. Click below to create your first!</h3>
<% else %>
	<h1>Listing repositories</h1>
		<table class='table table-striped table-hover'>
			<thead>
				<tr>
					<th>Name</th>
					<th>Roles</th>
					<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				<% repositories.each do |repository| %>
				<% if repository.valid? && can?(:read, repository) then %>
				<tr>
					<td><%= link_to repository.name, repository %></td>
					<td><%= role_description(repository).map {|x| x.to_s.capitalize}.join("; ") %></td>
					<td><%= link_to edit_repository_path(repository), :class => "btn" do %>
					 	<i class="fa fa-edit"></i>
					<% end %>
					<% if can?(:manage, repository) then %>
					<%= link_to repository_path(repository), :class => "btn", :id => 'delete', :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" do %>
					 	<i class="fa fa-trash"></i>
					 <% end
					 end %>
					</td>
				</tr>
				<% end %>
				<% end %>
		</table>
	<br />
<% end %>
<%= link_to "New Repository", new_repository_path, :class => "btn btn-primary" %>