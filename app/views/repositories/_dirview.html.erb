<%
num_dirs = @directory_list.length > 0 ? @directory_list.length : "none."
num_files = @file_list.length > 0 ? @file_list.length : "none."
%>

<p>
<h3>Directories: <%= num_dirs %></h3>
<ul id="dirs">
<% @directory_list.each do |dir| %>	
<li><%= image_tag(image_for_file(dir[:path], true)) %> <a href="<%= repository_path(@repository,:path=>@current_path+dir[:path])  %>"><%= dir[:path] %></a></li>
<% end %>
</ul>
</p>

<p>
<h3>Files: <%= num_files %></h3>
<ul id="files">
<% @file_list.each do |file| %>
<li><%= image_tag(image_for_file(file[:path])) %><a href="<%= repository_path(@repository,:path=>@current_path+file[:path], :file => true) %>"><%= file[:path] %></a></li>
<% end %>
</ul>
</p>

