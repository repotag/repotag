<div class="control-group">
   <%= f.label :email, t("activerecord.attributes.user.email", :default => "Email"), :class => 'control-label' %>
  <div class="input">
    <%= f.text_field :email, :class => 'text_field' %>
  </div>
</div>

<div class="control-group">
   <%= f.label :name, t("activerecord.attributes.user.name", :default => "Name"), :class => 'control-label' %>
  <div class="input">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
</div>

<div class="control-group">
   <%= f.label :name, t("activerecord.attributes.user.username", :default => "Username"), :class => 'control-label' %>
  <div class="input">
    <%= f.text_field :username, :class => 'text_field' %>
  </div>
</div>


<div class="control-group">
   <%= f.label :password, t("activerecord.attributes.user.password", :default => "password"), :class => 'control-label' %>
  <div class="input">
    <%= f.password_field :password, :class => 'password_field' %>
  </div>
</div>
<div class="control-group">
   <%= f.label :Password, t("activerecord.attributes.user.password_confirmation", :default => "password_confirmation"), :class => 'control-label' %>
  <div class="input">
    <%= f.password_field :password_confirmation, :class => 'password_field' %>
  </div>
</div>

<% for role in Repotag::Application.config.global_role_titles %>
  <div class ="control-group">
   <%= f.label "Global Roles" , :class => 'control-label' %>
      <div class="controls">
        <%= check_box_tag 'global_roles[]', role, user.has_role?(role) %>
		<%= role.to_s %>
      </div>
  </div>
<% end %>


<div class="form-actions">
  <button class="btn btn-primary" type="submit">Save</button>
  <%= link_to "Cancel", admin_users_path, :class => "btn btn-primary" %>
</div>
