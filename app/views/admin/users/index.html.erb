<!-- From https://github.com/edap/authuser/tree/master/app/views/admin/users -->
<h1>Users</h1>
<table class="table table-striped">
 <thead>
  <tr>
    <th>ID</th>
        <th>
      <%= t("activerecord.attributes.user.email", :default => t("activerecord.labels.email", :default => "Email")) %>
    </th>
        <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| -%>
   <tr>
    <td><%= user.id %></td>
        <td><%= link_to user.email, admin_user_path(user) %>
    </td>
        <td><%= user.created_at %></td>
    <td>
      <%= link_to "Show", admin_user_path(user), :class => "btn btn-primary btn-sm" %>
      <%= link_to "Edit", edit_admin_user_path(user), :class => "btn btn-primary btn-sm" %>
     <%= link_to "Destroy", admin_user_path(user), :class => "btn btn-primary btn-sm", :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>

<%= link_to "New", new_admin_user_path, :class => 'btn btn-primary' %>